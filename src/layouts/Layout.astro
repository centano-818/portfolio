---
import Background from "../components/background.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" id="html-root">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Oriel Arteaga - Full Stack Developer Portfolio" />
		<meta name="keywords" content="Dev, Developer, Oriel Arteaga JimÃ©nez, Portfolio, Ingeniero de Software, Desarrollo Web, Web Development, Software Engineer, Frontend & Backend Developer, Programador, Astro, Asp.Net, React, Node.js, TypeScript, Odoo" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="/portfolio/OrielDevIcon.webp" type="image/png">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		<meta name="google-site-verification" content="so2huJ8q2dGAFTDy95ZgvgRaUmCAZcbRhvce69KtS4M" />
		<title>{title}</title>
	</head>
	<body>
		<Background/>
		<Header/>
		<slot />
		<Footer id="footer"/>
		<script>
			import { currentLanguage, initializeLanguage } from '../i18n/languageStore';
			
			// Initialize language on page load
			initializeLanguage();
			
			// Update HTML lang attribute
			function updateHtmlLang() {
				const lang = currentLanguage.get();
				const htmlElement = document.getElementById('html-root');
				if (htmlElement) {
					htmlElement.setAttribute('lang', lang);
				}
			}
			
			// Update on language change
			currentLanguage.subscribe(updateHtmlLang);
			
			// Initial update
			updateHtmlLang();
		</script>
	</body>
</html>
<style is:global>
	:root {
		/* Enhanced Color System */
		--primary: 99, 102, 241;
		--primary-dark: 79, 70, 229;
		--primary-light: 165, 180, 252;
		--secondary: 14, 165, 233;
		--accent: 59, 130, 246;
		--accent-bright: 34, 197, 94;
		--accent-warm: 245, 101, 101;
		--accent-purple: 168, 85, 247;
		--surface: 15, 23, 42;
		--surface-light: 30, 41, 59;
		--surface-lighter: 51, 65, 85;
		--surface-elevated: 71, 85, 105;
		--text-primary: 248, 250, 252;
		--text-secondary: 203, 213, 225;
		--text-muted: 148, 163, 184;
		--border: 51, 65, 85;
		--border-light: 71, 85, 105;
		--border-bright: 99, 102, 241;
		
		/* Shadows */
		--shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
		--shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
		--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
		--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
		--shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
		
		/* Enhanced Gradients */
		--gradient-primary: linear-gradient(135deg, rgb(var(--primary)) 0%, rgb(var(--secondary)) 100%);
		--gradient-secondary: linear-gradient(135deg, rgb(var(--accent)) 0%, rgb(var(--accent-bright)) 100%);
		--gradient-warm: linear-gradient(135deg, rgb(var(--accent-warm)) 0%, rgb(var(--accent-purple)) 100%);
		--gradient-surface: linear-gradient(135deg, rgb(var(--surface)) 0%, rgb(var(--surface-light)) 100%);
		--gradient-surface-elevated: linear-gradient(135deg, rgb(var(--surface-light)) 0%, rgb(var(--surface-lighter)) 100%);
		--gradient-border: linear-gradient(135deg, rgba(var(--primary), 0.3) 0%, rgba(var(--secondary), 0.3) 100%);
		--gradient-glow: radial-gradient(circle at center, rgba(var(--primary), 0.3) 0%, rgba(var(--primary), 0.1) 50%, transparent 100%);
		
		/* Typography Scale */
		--text-xs: 0.75rem;
		--text-sm: 0.875rem;
		--text-base: 1rem;
		--text-lg: 1.125rem;
		--text-xl: 1.25rem;
		--text-2xl: 1.5rem;
		--text-3xl: 1.875rem;
		--text-4xl: 2.25rem;
		--text-5xl: 3rem;
		--text-6xl: 3.75rem;
		
		/* Spacing Scale */
		--space-1: 0.25rem;
		--space-2: 0.5rem;
		--space-3: 0.75rem;
		--space-4: 1rem;
		--space-6: 1.5rem;
		--space-8: 2rem;
		--space-12: 3rem;
		--space-16: 4rem;
		--space-20: 5rem;
		--space-24: 6rem;
		--space-32: 8rem;
		
		/* Border Radius */
		--radius-sm: 0.375rem;
		--radius: 0.5rem;
		--radius-md: 0.75rem;
		--radius-lg: 1rem;
		--radius-xl: 1.5rem;
		
		/* Transitions */
		--transition-fast: 150ms ease;
		--transition: 200ms ease;
		--transition-slow: 300ms ease;
	}

	/* Reset and Base Styles */
	*, *::before, *::after {
		box-sizing: border-box;
	}
	
	html {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
		font-variation-settings: normal;
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
		width: 100%;
		max-width: 100vw;
		overflow-x: hidden;
	}
	
	body {
		margin: 0;
		padding: 0;
		background: rgb(var(--surface));
		color: rgb(var(--text-primary));
		line-height: 1.6;
		font-size: var(--text-base);
		overflow-x: hidden;
		position: relative;
		min-height: 100vh;
		width: 100%;
		max-width: 100vw;
	}
	
	/* Custom scrollbar styles */
	body {
		scrollbar-gutter: stable;
	}
	
	/* Typography Utilities */
	.text-gradient {
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.text-shadow {
		text-shadow: 0 2px 4px rgb(0 0 0 / 0.1);
	}
	
	/* Glass Effect */
	.glass {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	/* Modern Button Styles */
	.btn {
		display: inline-flex;
		align-items: center;
		gap: var(--space-2);
		padding: var(--space-3) var(--space-6);
		border-radius: var(--radius);
		font-weight: 500;
		text-decoration: none;
		transition: all var(--transition);
		border: none;
		cursor: pointer;
		position: relative;
		overflow: hidden;
	}
	
	.btn-primary {
		background: var(--gradient-primary);
		color: white;
		box-shadow: var(--shadow-lg);
	}
	
	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-xl);
	}
	
	.btn-secondary {
		background: rgb(var(--surface-light));
		color: rgb(var(--text-primary));
		border: 1px solid rgb(var(--border));
	}
	
	.btn-secondary:hover {
		background: rgb(var(--surface-lighter));
		border-color: rgb(var(--border-light));
	}
	
	/* Enhanced Card Styles */
	.card {
		background: var(--gradient-surface);
		border: 1px solid rgb(var(--border));
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow);
		transition: all var(--transition-slow);
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
	}
	
	.card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, 
			rgba(255, 255, 255, 0.1) 0%, 
			rgba(255, 255, 255, 0.05) 50%, 
			rgba(255, 255, 255, 0.02) 100%);
		opacity: 0;
		transition: opacity var(--transition-slow);
		pointer-events: none;
		z-index: 1;
	}
	
	.card:hover {
		transform: translateY(-8px) scale(1.02);
		box-shadow: 
			var(--shadow-xl),
			0 0 40px rgba(var(--primary), 0.15),
			inset 0 1px 0 rgba(255, 255, 255, 0.1);
		border-color: rgba(var(--primary), 0.4);
	}
	
	.card:hover::before {
		opacity: 1;
	}
	
	.card-content {
		position: relative;
		z-index: 2;
	}
	
	/* Card Variants */
	.card-glass {
		background: rgba(255, 255, 255, 0.08);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.15);
	}
	
	.card-gradient {
		background: linear-gradient(145deg, 
			rgba(var(--surface), 0.9) 0%, 
			rgba(var(--surface-light), 0.8) 100%);
		border: 1px solid rgba(var(--primary), 0.2);
	}
	
	.card-interactive {
		cursor: pointer;
		user-select: none;
	}
	
	.card-interactive:active {
		transform: translateY(-4px) scale(1.01);
		transition-duration: 100ms;
	}
	
	/* Enhanced Animation Utilities */
	@media (prefers-reduced-motion: no-preference) {
		.animate-in {
			animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		}
		
		.animate-in-delay-1 {
			animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
			opacity: 0;
		}
		
		.animate-in-delay-2 {
			animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
			opacity: 0;
		}
		
		.animate-in-delay-3 {
			animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards;
			opacity: 0;
		}
		
		.animate-in-delay-4 {
			animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
			opacity: 0;
		}
		
		.animate-in-delay-5 {
			animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.5s forwards;
			opacity: 0;
		}
		
		.animate-scale-in {
			animation: scaleIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		}
		
		.animate-fade-in {
			animation: fadeIn 1s ease-out forwards;
		}
		
		.animate-slide-right {
			animation: slideInRight 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		}
		
		.animate-bounce-in {
			animation: bounceIn 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
		}
	}
	
	@keyframes slideInUp {
		from {
			opacity: 0;
			transform: translateY(40px) scale(0.95);
		}
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}
	
	@keyframes scaleIn {
		from {
			opacity: 0;
			transform: scale(0.8);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}
	
	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
	
	@keyframes slideInRight {
		from {
			opacity: 0;
			transform: translateX(-30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}
	
	@keyframes bounceIn {
		from {
			opacity: 0;
			transform: scale(0.3);
		}
		50% {
			opacity: 1;
			transform: scale(1.05);
		}
		70% {
			transform: scale(0.9);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}
	
	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}
	
	@keyframes pulse {
		0%, 100% {
			opacity: 1;
		}
		50% {
			opacity: 0.5;
		}
	}
	
	@keyframes shimmer {
		0% {
			background-position: -468px 0;
		}
		100% {
			background-position: 468px 0;
		}
	}
	
	.float-animation {
		animation: float 6s ease-in-out infinite;
	}
	
	.pulse-animation {
		animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}
	
	.shimmer-animation {
		background: linear-gradient(to right, 
			rgba(255, 255, 255, 0.0) 0%, 
			rgba(255, 255, 255, 0.1) 50%, 
			rgba(255, 255, 255, 0.0) 100%);
		background-size: 468px 100%;
		animation: shimmer 2s ease-in-out infinite;
	}
	
	/* Scrollbar Styling */
	::-webkit-scrollbar {
		width: 8px;
	}
	
	::-webkit-scrollbar-track {
		background: rgb(var(--surface));
	}
	
	::-webkit-scrollbar-thumb {
		background: rgb(var(--surface-lighter));
		border-radius: var(--radius);
	}
	
	::-webkit-scrollbar-thumb:hover {
		background: rgb(var(--border-light));
	}
</style>
