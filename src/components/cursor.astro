<script>
    let curX = 0;
    let curY = 0;
    let tgX = 0;
    let tgY = 0;
    document.addEventListener('DOMContentLoaded',() => {
        const cursor = document.querySelector<HTMLDivElement>('.custom-cursor');
        const followers  = document.getElementsByClassName<HTMLCollectionOf<HTMLDivElement>>('custom-cursor-follower');

        function move(){
            curX += (tgX - curX);
            curY += (tgY - curY);
            cursor.style.transform = `translate(${Math.round(curX)}px, ${Math.round(curY)}px)`;
            for(let follower of followers){
                follower.style.transform = `translate(${Math.round(curX)}px, ${Math.round(curY)}px)`;
            }

            requestAnimationFrame(() => {
                move();
            });
        }

        window.addEventListener("mousemove", (event) => {
            tgX = event.clientX;
            tgY = event.clientY;
        })

        move();
    })
</script>

